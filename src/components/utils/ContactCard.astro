---
    const { className, link, title, info } = Astro.props;
---

<a href={link} target="_blank" class:list={['flex gap-4 items-center', className]}>
    
    <slot name="icon" />

    <div class="flex flex-col">
        <h3 class="text-amber-500 font-bold text-xl lg:text-2xl uppercase">{title}</h3>
        <p class="font-bold text-lg md:text-xl">{info}</p>
    </div>
</a>