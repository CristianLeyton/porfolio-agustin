---
import LogoIcon from "./icons/LogoIcon.astro";
import LogoPR from "/public/assets/images/pr.png";
import LogoPS from "/public/assets/images/ps.png";
import LogoAI from "/public/assets/images/ai.png";

import ButtonPrimary from "./utils/ButtonPrimary.astro";
import { contact } from "./Contact.astro";

---
<section class="px-3 md:px-10">

    <div class="font-basic-sans pt-6 md:pt-10 flex flex-nowrap items-center gap-2 text-3xl">
        <LogoIcon className="size-20"/> PORTFOLIO
    </div>

    <main class="grid md:grid-cols-3 grid-cols-2 items-center">
    <div class="font-trend-sans col-span-2 mt-6">
        <span class="fade-in block transform animate-entry translate-0">
            <p class="neon-white text-5xl sm:text-7xl md:text-6xl lg:text-7xl xl:text-8xl 2xl:text-9xl tracking-tighter">AGUSTÍN</p>
            <p class="neon-white text-5xl sm:text-7xl md:text-6xl lg:text-7xl xl:text-8xl 2xl:text-9xl tracking-tighter">ALTAMIRANO</p>
        </span>
        <h3 class="neon-orange font-basic-sans text-lg sm:text-2xl md:text-xl lg:text-2xl xl:text-3xl 2xl:text-4xl text-amber-500 mt-2 tracking-widest">DISEÑO GRAFICO Y EDICIÓN DE VIDEO</h3>
        <a href={contact.whatsapp} target="_blank"><ButtonPrimary>CONTACTO</ButtonPrimary></a>
    </div>
    
    <div class="col-span-2 md:col-span-1">
        <div class="flex justify-center items-center md:flex-col md:pr-2">
            <img src={LogoPR.src} alt="Icono Adobe Premier Pro" class="w-[40%] md:w-[75%] xl:w-[65%] 2xl:w-[75%] aspect-square rotate-12 -z-10 m-2 md:-mt-[20%] md:m-0 md:-rotate-12 md:translate-x-20 md:z-0">
            <img src={LogoPS.src} alt="Icono Adobe Photoshop"   class="w-[40%] md:w-[75%] xl:w-[65%] 2xl:w-[75%] aspect-square md:-mt-[30%] -rotate-12 -z-0 m-2 md:m-0 -ml-[15%] md:rotate-12 md:-translate-x-7 md:z-10">
            <img src={LogoAI.src} alt="Icono Adobe Illustrator" class="w-[40%] md:w-[75%] xl:w-[65%] 2xl:w-[75%] aspect-square md:-mt-[30%] rotate-12 z-10 m-2 md:m-0 -ml-[15%] md:-rotate-12 md:translate-x-20 md:z-20">
        </div>
    </div>

</main>
</section>


